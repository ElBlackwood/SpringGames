<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <DatePicker
                android:id="@+id/pickerDate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textMultiLine"
                android:maxLines="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Activity Type"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/spiActivities"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Distance (miles)"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDistance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Time H:M:S"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/etHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/etMins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/etHours"
                    android:ems="2"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/etSecs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/etMins"
                    android:ems="2"
                    android:inputType="number"
                    android:maxLength="2" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Notes"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textMultiLine"
                android:maxLines="4" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingTop="10dp"
                android:text="Intensity"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/seekerIntensity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:max="5"
                android:minWidth="250px"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:thumbOffset="8dp" />

            <Button
                android:id="@+id/bsave"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>